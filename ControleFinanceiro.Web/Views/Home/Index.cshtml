<!-- Transações recentes + Ações rápidas -->
<div class="row g-4">
    <!-- Transações recentes -->
    <div class="col-lg-8">
        <div class="card fade-in">
            <div class="card-header">
                <h5 class="mb-0">Transações Recentes</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Categoria</th>
                                <th>Tipo</th>
                                <th>Valor</th>
                                <th>Data da Transação</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transacao in Model.UltimasTransacoes)
                            {
                                <tr>
                                    <td>@transacao.CategoriaNome</td>
                                    <td>
                                        <span class="badge @(transacao.TipoTransacaoNome == "Receita" ? "bg-success" : "bg-danger")">
                                            @transacao.TipoTransacaoNome
                                        </span>
                                    </td>
                                    <td class="@(transacao.TipoTransacaoNome == "Receita" ? "text-success" : "text-danger")">
                                        R$ @transacao.ValorPagoFormatado
                                    </td>
                                    <td>@transacao.DataTransacaoFormatada</td>
                                    <td>
                                        <a href="@Url.Action("Detalhes", "Transacoes", new { id = transacao.Id })" class="btn btn-sm btn-outline-secondary">
                                            Detalhes
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @* <div class="text-center mt-3">
                    <a href="~/Transacoes/Index" class="btn btn-outline-primary">Ver todas transações</a>
                </div> *@
            </div>
        </div>
    </div>

    <!-- Ações rápidas -->
    <div class="col-lg-4">
        <div class="card fade-in">
            <div class="card-header">
                <h5 class="mb-0">Ações Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-success" onclick="openModal('receita')">
                        <i class="bi bi-plus-circle"></i> Nova Receita
                    </button>
                    <button class="btn btn-danger" onclick="openModal('despesa')">
                        <i class="bi bi-dash-circle"></i> Nova Despesa
                    </button>
                    <button class="btn btn-warning" onclick="openModal('gastoFixo')">
                        <i class="bi bi-calendar-plus"></i> Novo Gasto Fixo
                    </button>
                    <button class="btn btn-info">
                        <i class="bi bi-file-earmark-text"></i> Gerar Relatório
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
