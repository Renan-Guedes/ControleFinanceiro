@model ControleFinanceiro.Web.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Cards de resumo -->
<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="financial-card success fade-in">
            <div class="card-icon success">
                <i class="bi bi-arrow-up-circle"></i>
            </div>
            <h6 class="text-muted mb-2">Total de Receitas</h6>
            <h3 class="text-success mb-1">@Model.TotalReceitas.ToString("C")</h3>
            @* <small class="text-success">+12% este mês</small> *@
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="financial-card danger fade-in">
            <div class="card-icon danger">
                <i class="bi bi-arrow-down-circle"></i>
            </div>
            <h6 class="text-muted mb-2">Total de Despesas</h6>
            <h3 class="text-danger mb-1">@Model.TotalDespesas.ToString("C")</h3>
            @* <small class="text-danger">-5% este mês</small> *@
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="financial-card primary fade-in">
            <div class="card-icon info">
                <i class="bi bi-piggy-bank"></i>
            </div>
            <h6 class="text-muted mb-2">Saldo Atual</h6>
            <h3 class="text-primary mb-1">@Model.SaldoAtual.ToString("C")</h3>
            <small class="text-muted">Disponível</small>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="financial-card warning fade-in">
            <div class="card-icon warning">
                <i class="bi bi-wallet2"></i>
            </div>
            <h6 class="text-muted mb-2">Custo de Vida</h6>
            <h3 class="text-warning mb-1">@Model.TotalGastosFixos.ToString("C")</h3>
            <small class="text-muted">Mensais</small>
        </div>
    </div>
</div>

