@model IEnumerable<ControleFinanceiro.Web.ViewModels.TransacaoViewModel>

@{
    ViewData["Title"] = "Despesas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fade-in">Minhas Despesas</h2>
        <a href="@Url.Action("Criar", "Despesa")" class="btn btn-primary fade-in">
            <i class="bi bi-plus-circle"></i> Nova Despesa
        </a>
    </div>

    <div class="card fade-in">
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center">
                    Nenhuma despesa cadastrada ainda.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="text-center">
                            <tr>
                                <th>Categoria</th>
                                <th>Banco</th>
                                <th>Valor Planejado</th>
                                <th>Valor Pago</th>
                                <th>Data do Pagamento</th>
                                <th>Data do Vencimento</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var despesa in Model)
                            {
                                <tr class="text-center">
                                    <td>@despesa.CategoriaNome</td>
                                    <td>@despesa.BancoNome</td>
                                    <td class="text-danger">@despesa.ValorPlanejadoFormatado</td>
                                    <td class="text-danger">@despesa.ValorPagoFormatado</td>
                                    <td>@despesa.DataTransacaoFormatada</td>
                                    <td>@despesa.DataVencimentoFormatada</td>
                                    <td class="text-end">
                                        <a asp-action="Detalhes" asp-route-despesaId="@despesa.Id" class="btn btn-sm btn-outline-secondary">
                                            Detalhes
                                        </a>
                                        <a asp-action="Editar" asp-route-despesaId="@despesa.Id" class="btn btn-sm btn-outline-warning">
                                            Editar
                                        </a>
                                        <a href="#" data-despesa-id="@despesa.Id" class="botao-Excluir btn btn-sm btn-outline-danger">
                                            Excluir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<form id="form-excluir" method="post" asp-action="Excluir" asp-controller="Despesa">
    @Html.AntiForgeryToken()
    <input type="hidden" name="despesaId" id="despesaIdExcluir" />
</form>

@section Scripts {
    <script>
        document.querySelectorAll('.botao-Excluir').forEach(function (botao) {
            botao.addEventListener('click', function (e) {
                e.preventDefault();
                const despesaId = botao.getAttribute('data-despesa-id');

                Swal.fire({
                    title: 'Confirmação de Exclusão',
                    text: "Tem certeza que deseja excluir esta despesa? Esta ação não pode ser desfeita.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Excluir',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Excluindo...',
                            text: 'Aguarde um momento.',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        fetch('/Despesa/Excluir', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: JSON.stringify(despesaId)
                        })
                        .then(response => {
                            if (response.ok) {
                                Swal.fire('Excluída!', 'A despesa foi excluída com sucesso.', 'success');
                                botao.closest('tr').remove();
                            } else {
                                Swal.fire('Erro!', 'Ocorreu um problema ao excluir.', 'error');
                            }
                        })
                        .catch(() => {
                            Swal.fire('Erro!', 'Não foi possível conectar ao servidor.', 'error');
                        });
                    }
                });
            });
        });
    </script>
}
