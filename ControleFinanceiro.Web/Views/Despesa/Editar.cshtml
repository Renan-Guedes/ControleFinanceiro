@model ControleFinanceiro.Web.ViewModels.TransacaoViewModel

@{
    ViewData["Title"] = "Nova Despesa";
}

<div class="container mt-4">
    <div class="card fade-in">
        <div class="card-header">
            <h5 class="mb-0">Cadastrar Nova Despesa</h5>
        </div>
        <div class="card-body">
            <form id="formTransacao" asp-action="Criar" method="post">
                
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label">Categoria</label>
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                        <option value="0">-- Selecione --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="BancoId" class="form-label">Banco</label>
                    <select asp-for="BancoId" class="form-select" asp-items="ViewBag.Bancos">
                        <option value="0">-- Selecione --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <textarea asp-for="Descricao" class="form-control" aria-label="With textarea"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="ValorPlanejado" class="form-label">Valor Planejado</label>
                    <input asp-for="ValorPlanejado" class="form-control" type="number" step="0.01" />
                </div>

                <div class="mb-3">
                    <label asp-for="ValorPago" class="form-label">Valor Pago</label>
                    <input asp-for="ValorPago" class="form-control" type="number" step="0.01" />
                </div>

                <div class="mb-3">
                    <label asp-for="DataVencimento" class="form-label">Data do Vencimento</label>
                    <input asp-for="DataVencimento" class="form-control" type="date" />
                </div>

                <div class="mb-3">
                    <label asp-for="DataTransacao" class="form-label">Data do Pagamento</label>
                    <input asp-for="DataTransacao" class="form-control" type="date" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Validacoes/transacao-validacao.js"></script>
}