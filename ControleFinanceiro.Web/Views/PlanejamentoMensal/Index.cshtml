@model IEnumerable<ControleFinanceiro.Web.ViewModels.PlanejamentoMensalViewModel>

@{
    ViewData["Title"] = "Planejamentos Mensais";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Criar" class="btn btn-success mb-3">Novo Planejamento</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ano</th>
            <th>Mês</th>
            <th>Saldo Inicial</th>
            <th>Banco</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ano</td>
                <td>@item.Mes</td>
                <td>@item.SaldoInicial.ToString("C")</td>
                <td>@item.BancoNome</td>
                <td>
                    <a asp-action="Editar" asp-route-planejamentoMensalId="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Deletar" asp-route-planejamentoMensalId="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
