@model ControleFinanceiro.Web.ViewModels.TransacaoViewModel

@{
    ViewData["Title"] = "Editar Transação";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fatura"></label>
        <select asp-for="Fatura" class="form-select">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
        <span asp-validation-for="Fatura" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorPlanejado"></label>
        <input asp-for="ValorPlanejado" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ValorPlanejado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorPago"></label>
        <input asp-for="ValorPago" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ValorPago" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <select asp-for="CategoriaId" class="form-select" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nome"))">
            <option value="">Selecione a categoria</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoTransacaoId"></label>
        <select asp-for="TipoTransacaoId" class="form-select" asp-items="@(new SelectList(ViewBag.TipoTransacao, "Id", "Nome"))">
            <option value="">Selecione o tipo</option>
        </select>
        <span asp-validation-for="TipoTransacaoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataVencimento"></label>
        <input asp-for="DataVencimento" class="form-control" type="date" />
        <span asp-validation-for="DataVencimento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataVencimento"></label>
        <input asp-for="DataVencimento" class="form-control" type="date" />
        <span asp-validation-for="DataVencimento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataTransacao"></label>
        <input asp-for="DataTransacao" class="form-control" type="date" />
        <span asp-validation-for="DataTransacao" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
