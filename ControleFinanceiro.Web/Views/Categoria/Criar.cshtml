@model ControleFinanceiro.Web.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Nova Categoria";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div id="card-header" class="card-header bg-secondary text-white fw-bold">
            <i class="bi bi-plus-circle me-2"></i> Cadastrar Categoria
        </div>
        <div class="card-body">
            <form asp-action="Criar" method="post" id="categoriaForm">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Salário, Aluguel, Lazer" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoTransacaoId" class="form-label fw-semibold">Tipo</label>
                    <select asp-for="TipoTransacaoId" class="form-select" id="tipoTransacaoSelect">
                        <option value="">Selecione</option>
                        <option value="1">Receita</option>
                        <option value="2">Despesa</option>
                    </select>
                    <span asp-validation-for="TipoTransacaoId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                    <button type="submit" class="btn btn-success px-4">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const selectTipo = document.getElementById("tipoTransacaoSelect");
        const form = document.getElementById("card-header");

        selectTipo.addEventListener("change", function () {
            form.classList.remove("bg-success", "bg-danger");
            if (this.value === "1") {
                form.classList.add("bg-success");
            } else if (this.value === "2") {
                form.classList.add("bg-danger");
            }
        });
    </script>
}
