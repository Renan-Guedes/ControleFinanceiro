@model List<ControleFinanceiro.Web.ViewModels.CategoriaViewModel>

<h2>Listar Categorias</h2>

<a asp-action="Criar" class="btn btn-primary mb-3">Nova Categoria</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Nome</td>
                <td>@(categoria.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Editar" asp-route-categoriaId="@categoria.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Deletar" asp-route-categoriaId="@categoria.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>