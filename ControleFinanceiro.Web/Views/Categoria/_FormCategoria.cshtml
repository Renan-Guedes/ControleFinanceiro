@model ControleFinanceiro.Web.ViewModels.CategoriaViewModel

<form asp-action="@ViewContext.RouteData.Values["action"]?.ToString()">
    
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ativo"></label>
        <select asp-for="Ativo" class="form-select">
            <option value="true" selected>Sim</option>
            <option value="false">Não</option>
        </select>
        <span asp-validation-for="Ativo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>