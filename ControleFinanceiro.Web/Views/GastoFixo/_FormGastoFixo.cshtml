@model ControleFinanceiro.Web.ViewModels.GastoFixoViewModel

<h2>@ViewContext.RouteData.Values["action"] - Gasto Fixo</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]?.ToString()" method="post">
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BancoId"></label>
        <select asp-for="BancoId" class="form-control" asp-items="@(new SelectList(ViewBag.Bancos, "Id", "Nome"))">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="BancoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nome"))">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
