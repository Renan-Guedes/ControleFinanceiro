@model IEnumerable<ControleFinanceiro.Web.ViewModels.GastoFixoViewModel>

@{
    ViewData["Title"] = "Painel de Gastos Fixos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Gastos Fixos</h2>
        <button type="button" class="btn btn-success shadow-sm px-4" data-bs-toggle="modal" data-bs-target="#gastoFixoModal">
            <i class="bi bi-plus-circle"></i> Adicionar Gasto Fixo
        </button>
    </div>

    <!-- 🔹 Painel de resumo -->
    <div class="mb-4">
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6 mx-auto">
                    <div class="d-flex flex-column align-items-center p-4 rounded-3 bg-warning bg-opacity-10 shadow-sm">
                        <div class="mb-3">
                            <i class="bi bi-wallet2 text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                        <h6 class="text-muted mb-1">Custo de Vida</h6>
                        <h2 class="fw-bold text-warning mb-1">@ViewBag.TotalGastosFixos</h2>
                        <span class="text-muted small">@ViewBag.ContagemGastosFixos Gastos Mensais</span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mx-auto">
                    <div class="d-flex flex-column align-items-center p-4 rounded-3 bg-danger bg-opacity-10 shadow-sm">
                        <div class="mb-3">
                            <i class="bi bi-wallet2 text-danger" style="font-size: 2.5rem;"></i>
                        </div>
                        <h6 class="text-muted mb-1">Falta Pagar</h6>
                        <h2 class="fw-bold text-danger mb-1">@ViewBag.TotalGastosFixosEmAberto</h2>
                        <span class="text-muted small">@ViewBag.ContagemGastosFixosAbertos Contas Restantes</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtro -->
    <div id="filtroGastoFixo" class="card shadow-sm border-0 mb-4">
        <div class="card-body d-flex align-items-center gap-3">
            <label for="tipoTransacaoFiltro" class="fw-semibold">Filtrar por:</label>
            <select id="tipoTransacaoFiltro" class="form-select w-auto">
                <option value="">Todas</option>
                <option value="1">Receitas</option>
                <option value="2">Despesas</option>
            </select>
            <button id="btnLimparFiltro" class="btn btn-outline-secondary">Limpar</button>
        </div>
    </div>

    <table class="table table-bordered shadow-sm">
        <thead class="table-secondary text-center">
            <tr>
                <th>Categoria</th>
                <th>Tipo</th>
                <th>Descrição</th>
                <th>Banco</th>
                <th>Valor (R$)</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="gastosTableBody">
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">Nenhum gasto fixo encontrado.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    var isPago = item.IsPago;
                    <tr class="text-center" data-tipo="@item.TipoTransacaoId">
                        <td>@item.CategoriaNome</td>
                        <td>
                            <span class="badge @(item.TipoTransacaoId == 1 ? "bg-success" : "bg-danger")">
                                @(item.TipoTransacaoId == 1 ? "Receita" : "Despesa")
                            </span>
                        </td>
                        <td>@item.Descricao</td>
                        <td>@item.BancoNome</td>
                        <td>@item.ValorFormatado</td>
                        <td>
                            <span class="badge @(isPago ? "bg-success" : "bg-danger")">
                                @(isPago ? (item.TipoTransacaoId == 1 ? "Recebido" : "Pago") : "Pendente")
                            </span>
                        </td>
                        <td>
                            @if (!isPago)
                            {
                                <a href="#" data-id="@item.Id" class="Confirmar-Transacao btn btn-outline-success border-0"><i class="bi bi-cash"></i></a>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-secondary" disabled><i class="bi bi-check-circle-fill"></i> Pago</button>
                            }
                            <button type="button" class="btn btn-outline-warning border-0"><i class="bi bi-pencil"></i></button>
                            <a href="#" data-id="@item.Id" class="botao-Excluir btn btn-outline-danger border-0"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<form id="form-transacao" method="post" asp-action="ConfirmarTransacao" asp-controller="GastoFixo">
    @Html.AntiForgeryToken()
    <input type="hidden" name="gastoFixoId" id="gastoFixoIdConfirmarTransacao" />
</form>

<form id="form-excluir" method="post" asp-action="Excluir" asp-controller="GastoFixo">
    @Html.AntiForgeryToken()
    <input type="hidden" name="gastoFixoId" id="gastoFixoIdExcluir" />
</form>

<!-- Modal Cadastro/Atualização -->
<div class="modal fade" id="gastoFixoModal" tabindex="-1" aria-labelledby="gastoFixoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="Criar" method="post" id="formGastoFixo">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="gastoFixoModalLabel">Novo Gasto Fixo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Descrição</label>
                        <input name="Descricao" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Categoria</label>
                        <select name="CategoriaId" asp-items="ViewBag.Categorias" class="form-select" required>
                            <option value="">Selecione uma Categoria</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Banco</label>
                        <select name="BancoId" asp-items="ViewBag.Bancos" class="form-select" required>
                            <option value="">Selecione um Banco</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Valor</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="text" inputmode="decimal" name="Valor" id="valorInputCadastro" class="form-control" placeholder="0,00" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tipo de Transação</label>
                        <select name="TipoTransacaoId" class="form-select" required>
                            <option value="1">Receita</option>
                            <option value="2" selected>Despesa</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // Filtro
            initFiltro({
               filtroId: "tipoTransacaoFiltro",
               limparId: "btnLimparFiltro",
               tabelaId: "gastosTableBody",
               cardId: "filtroGastoFixo"
            });

            // Moeda
            initMascaraMoeda("#valorInputCadastro, #pagamentoValor, #recebimentoValor");

            // Modal Pagamento
            initModalPagamento("pagamentoModal");

            // Modal Recebimento
            initModalRecebimento("recebimentoModal");

            // Confirmar Baixa de Pagamento / Recebimento
            initConfirmarTransacao({
                selector: ".Confirmar-Transacao",
                url: "/GastoFixo/ConfirmarTransacao"
            });

            // Confirmar Exclusão de Gasto Fixo
            initConfirmDelete({
                selector: ".botao-Excluir",
                url: "/GastoFixo/Excluir",
                mensagens: {
                    titulo: "Confirmação de Exclusão",
                    texto: "Tem certeza que deseja excluir esta conta?",
                    sucesso: "A conta foi excluída com sucesso!"
                }
            });
        });
    </script>
}
