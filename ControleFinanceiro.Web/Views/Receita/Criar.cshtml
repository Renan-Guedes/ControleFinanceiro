@model ControleFinanceiro.Web.ViewModels.TransacaoViewModel

@{
    ViewData["Title"] = "Nova Receita";
}

<div class="container mt-4">
    <div class="card fade-in">
        <div class="card-header">
            <h5 class="mb-0">Cadastrar Nova Receita</h5>
        </div>
        <div class="card-body">
            <form asp-action="Criar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label">Categoria</label>
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                        <option value="">-- Selecione --</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BancoId" class="form-label">Banco</label>
                    <select asp-for="BancoId" class="form-select" asp-items="ViewBag.Bancos">
                        <option value="">-- Selecione --</option>
                    </select>
                    <span asp-validation-for="BancoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ValorPlanejado" class="form-label">Valor Planejado</label>
                    <input asp-for="ValorPlanejado" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="ValorPlanejado" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ValorPago" class="form-label">Valor Pago</label>
                    <input asp-for="ValorPago" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="ValorPago" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataTransacao" class="form-label">Data do Recebimento</label>
                    <input asp-for="DataTransacao" class="form-control" type="date" />
                    <span asp-validation-for="DataTransacao" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>
