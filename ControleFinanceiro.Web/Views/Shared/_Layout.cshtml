<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Controle Financeiro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a asp-controller="Home" asp-action="Index" class="sidebar-brand">
                <i class="bi bi-graph-up"></i>
                <span class="brand-text">FinanceApp</span>
            </a>
        </div>
        <nav class="sidebar-menu">
            <a asp-controller="Home" asp-action="Index" class="sidebar-item">
                <i class="bi bi-house"></i><span>Home</span>
            </a>
            <a asp-controller="Receita" asp-action="Index" class="sidebar-item">
                <i class="bi bi-arrow-up-circle"></i><span>Receitas</span>
            </a>
            <a href="~/Despesa/Index" class="sidebar-item">
                <i class="bi bi-arrow-down-circle"></i><span>Despesas</span>
            </a>
            <a href="~/Categoria/Index" class="sidebar-item">
                <i class="bi bi-tags"></i><span>Categorias</span>
            </a>
            <a href="~/GastoFixo/Index" class="sidebar-item">
                <i class="bi bi-calendar"></i><span>Custo de Vida</span>
            </a>
            <a href="~/Relatorio/Index" class="sidebar-item">
                <i class="bi bi-pie-chart"></i><span>Relatórios</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Top Navbar -->
        <nav class="top-navbar">
            <div class="d-flex align-items-center">
                <button class="toggle-sidebar me-3" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </button>
                <div>
                    <h5 class="mb-0">Controle Financeiro</h5>
                    <small class="text-muted">Gerencie suas finanças com inteligência</small>
                </div>
            </div>
            <div class="d-flex align-items-center gap-2">
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-bell"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-person"></i>
                </button>
            </div>
        </nav>

        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <!-- Modal e Toast -->
    @* <partial name="_Modal"></partial> *@
    @* <partial name="_Toast"></partial> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/FiltroTipoTransacao.js"></script>
    <script src="~/js/MascaraMoeda.js"></script>
    <script src="~/js/ModalPagamento.js"></script>
    <script src="~/js/ModalRecebimento.js"></script>
    <script src="~/js/ConfirmarTransacao.js"></script>
    <script src="~/js/ConfirmDelete.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
